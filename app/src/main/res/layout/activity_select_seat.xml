<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.seat.SelectSeatActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back_ios"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pilih Kursi"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Bus Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvBusInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/LOADING"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvRouteInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/LOADING"
                        android:textSize="14sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Seat Legend -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Keterangan:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Available -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <View
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@drawable/seat_available"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tersedia"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <!-- Selected -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <View
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@drawable/seat_selected"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dipilih"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <!-- Occupied -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <View
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@drawable/seat_occupied"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Terisi"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Bus Layout -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <!-- Driver Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <View
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:background="@drawable/driver_seat"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SUPIR"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- Seats Layout -->
                    <!-- Row 1 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/seat_1"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="1"
                            android:textSize="12sp"
                            android:background="@drawable/seat_available"
                            android:layout_marginEnd="8dp"
                            android:tag="available" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/seat_2"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="2"
                            android:textSize="12sp"
                            android:background="@drawable/seat_available"
                            android:layout_marginEnd="24dp"
                            android:tag="available" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/seat_3"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="3"
                            android:textSize="12sp"
                            android:background="@drawable/seat_available"
                            android:tag="available" />

                    </LinearLayout>

                    <!-- Row 2 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/seat_4"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="4"
                            android:textSize="12sp"
                            android:background="@drawable/seat_available"
                            android:layout_marginEnd="8dp"
                            android:tag="available" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/seat_5"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="5"
                            android:textSize="12sp"
                            android:background="@drawable/seat_available"
                            android:layout_marginEnd="24dp"
                            android:tag="available" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/seat_6"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="6"
                            android:textSize="12sp"
                            android:background="@drawable/seat_available"
                            android:tag="available" />

                    </LinearLayout>

                    <!-- Row 3 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/seat_7"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="7"
                            android:textSize="12sp"
                            android:background="@drawable/seat_available"
                            android:layout_marginEnd="8dp"
                            android:tag="available" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/seat_8"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="8"
                            android:textSize="12sp"
                            android:background="@drawable/seat_available"
                            android:layout_marginEnd="24dp"
                            android:tag="available" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/seat_9"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="9"
                            android:textSize="12sp"
                            android:background="@drawable/seat_available"
                            android:tag="available" />

                    </LinearLayout>

                    <!-- Row 4 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/seat_10"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="10"
                            android:textSize="12sp"
                            android:background="@drawable/seat_available"
                            android:layout_marginEnd="8dp"
                            android:tag="available" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/seat_11"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="11"
                            android:textSize="12sp"
                            android:background="@drawable/seat_available"
                            android:layout_marginEnd="24dp"
                            android:tag="available" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/seat_12"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="12"
                            android:textSize="12sp"
                            android:background="@drawable/seat_available"
                            android:tag="available" />

                    </LinearLayout>

                    <!-- Row 5 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/seat_13"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="13"
                            android:textSize="12sp"
                            android:background="@drawable/seat_available"
                            android:layout_marginEnd="8dp"
                            android:tag="available" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/seat_14"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="14"
                            android:textSize="12sp"
                            android:background="@drawable/seat_available"
                            android:layout_marginEnd="24dp"
                            android:tag="available"
                            />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/seat_15"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="15"
                            android:textSize="12sp"
                            android:background="@drawable/seat_available"
                            android:tag="available" />

                    </LinearLayout>

                    <!-- Row 6 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/seat_16"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="16"
                            android:textSize="12sp"
                            android:background="@drawable/seat_available"
                            android:layout_marginEnd="8dp"
                            android:tag="available" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/seat_17"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="17"
                            android:textSize="12sp"
                            android:background="@drawable/seat_available"
                            android:layout_marginEnd="24dp"
                            android:tag="available" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/seat_18"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="18"
                            android:textSize="12sp"
                            android:background="@drawable/seat_available"
                            android:tag="available" />

                    </LinearLayout>

                    <!-- Row 7 (Back Row) -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/seat_19"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="19"
                            android:textSize="12sp"
                            android:background="@drawable/seat_available"
                            android:tag="available" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Selected Seat Info -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSelectedSeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Kursi yang dipilih:"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvSelectedSeat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Action -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:elevation="8dp">

        <!-- Total Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Harga:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/LOADING"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Continue Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Bayar"
            android:background="@color/md_theme_primary"
            android:textSize="16sp"
            android:textColor="@color/md_theme_onPrimary"
            android:foreground="?attr/selectableItemBackground"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>