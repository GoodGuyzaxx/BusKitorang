<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Ticket Icon -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_confirmation_number"
                android:backgroundTint="@color/md_theme_primary"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvBookingDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/LOADING"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    tools:text="Dipesan: 29 Juli 2025" />

            </LinearLayout>

            <!-- Status Badge -->
            <TextView
                android:id="@+id/tvTicketStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/LOADING"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="@drawable/seat_occupied"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                />

        </LinearLayout>

        <!-- Route Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp"
            android:gravity="center_vertical">

            <!-- Departure -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDepartureTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07:00"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="07:00" />

                <TextView
                    android:id="@+id/tvDepartureLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jayapura"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    tools:text="Jayapura" />


            </LinearLayout>

            <!-- Route Line with Bus -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="16dp">

                <View
                    android:layout_width="40dp"
                    android:layout_height="2dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_directions_bus"
                    android:layout_marginVertical="4dp" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="2dp" />

            </LinearLayout>

            <!-- Arrival -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/tvArrivalTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:30"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="10:30" />

                <TextView
                    android:id="@+id/tvArrivalLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sarmi"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    tools:text="Sarmi" />


            </LinearLayout>

        </LinearLayout>

        <!-- Divider with Dashed Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/dash_line" />

        <!-- Bottom Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Left Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!-- Bus Name & Seat -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bus"
                        android:textSize="10sp"
                        />

                    <TextView
                        android:id="@+id/tvBusName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/LOADING"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp"
                         />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kursi"
                        android:textSize="10sp"
                        />

                    <TextView
                        android:id="@+id/tvBusSeat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/LOADING"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp"
                        />

                </LinearLayout>




            </LinearLayout>

            <!-- Right Side - Price & Action -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">


                <!-- Action Button (Dynamic based on status) -->
                <Button
                    android:id="@+id/btnAction"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Lihat Detail"
                    android:textSize="12sp"
                    android:paddingHorizontal="16dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    tools:text="Lihat Detail" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>